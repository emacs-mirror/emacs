AC_INIT({{PROJECT_NAME}}, {{PROJECT_VERSION}})
AM_INIT_AUTOMAKE([{{PROGRAM}}], 0)
AM_CONFIG_HEADER(config.h)

{{comment_prefix}} End the configure script.
AC_OUTPUT(Makefile, [date > stamp-h] )
