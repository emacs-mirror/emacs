# example/scheme/Makefile -- Makefile for the MPS Scheme example
#
# $Id$

CFLAGS = @CFLAGS@

MPS = ../../code

TARGETS = scheme-malloc scheme

all: $(TARGETS)

scheme-malloc: scheme-malloc.c
	$(CC) $(CFLAGS) -o $@ -I $(MPS) $< $(MPS)/mps.c

scheme: scheme.c
	$(CC) $(CFLAGS) -o $@ -I $(MPS) $< $(MPS)/mps.c

clean:
	rm $(TARGETS)
