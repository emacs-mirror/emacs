target: phony
	$(MAKE) -f $(PFM).gmk VARIETY=hi variety
	$(MAKE) -f $(PFM).gmk VARIETY=ci variety
	$(MAKE) -f $(PFM).gmk VARIETY=ti variety
endif
endif


